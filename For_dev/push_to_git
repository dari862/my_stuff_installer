#!/bin/sh
set -e

repos="
my_stuff
Theme_Stuff
my_stuff_installer
YadAppsStore
"

# Color output
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No color

start_ssh_agent() {
	eval "$(ssh-agent -s)" >/dev/null 2>&1
	ssh-add ~/.ssh/id_rsa >/dev/null 2>&1
}

push_now() {
    repo_name="$1"
    echo "ðŸ” Checking repo: $repo_name"
    git remote set-url origin "git@github.com:dari862/${repo_name}.git"
    git add -A

    if git diff-index --quiet HEAD --; then
        echo "${GREEN}âœ… No changes to commit for $repo_name${NC}"
        return
    else
        if git commit -m "Update README.md"; then
            echo "${GREEN}âœ… Successfully Committed changes in $repo_name ${NC}"
        else
            echo "${RED}âŒ Failed to commit changes in $repo_name${NC}"
            return 1
        fi

        CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)

    	if git push origin "$CURRENT_BRANCH"; then
            echo "${GREEN}âœ… Successfully pushed $repo_name ($CURRENT_BRANCH)${NC}"
        else
            echo "${RED}âŒ Failed to push $repo_name ($CURRENT_BRANCH)${NC}"
            git push --force
        fi
    fi
}

#start_ssh_agent >/dev/null 2>&1

repos_name=$(printf "%s" "$repos" | tr '\n' ' ')

printf "Starting push for all Git repositories: $repos_name"
echo "-------------------------------------------------------"

for repo in ${repos}; do
    repo_path="$HOME/Desktop/$repo"
    if [ -d "$repo_path" ]; then
        cd "$repo_path" || { echo "Failed to cd into $repo_path"; continue; }
        echo "  Pushing repository: $repo"
        echo "-------------------------------------------------------"
        push_now "$repo"
        echo " "
        echo " "
    else
        echo "Directory not found: $repo_path"
    fi
done
