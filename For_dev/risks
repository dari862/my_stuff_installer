#!/bin/sh
cd "$HOME/Desktop/my_stuff/"

{ echo "############"
	echo "# doas "
	echo "############"
	grep -rwIi "doas"
	echo ""
	echo "############"
	echo "# pkexec"
	echo "############"
	grep -rwIi "pkexec"
	echo ""
	echo "############"
	echo "# sudo "
	echo "############"
	grep -rwIi "sudo"
	echo ""
	echo "############"
	echo "# secret"
	echo "############"
	grep -rIi "secret"
	echo ""
	echo "############"
	echo "# pass"
	echo "############"
	grep -rIi "pass"
} > "$HOME/Desktop/asap"


